[project]
authors = [
  {name = "{{ author_name }}", email = "{{ email }}"}
]
# PEP 621 project metadata
# See https://www.python.org/dev/peps/pep-0621/
dependencies = [
{% block dependencies %}
  "django-environ"
{% endblock %}
]
description = ""
license = {text = "GPL-3.0+"}
name = "{{ project_slug }}"
readme = "README.md"
requires-python = ">=3.10"
version = "0.1.0"
{% block project_extra %}{% endblock %}
{% block extra %}{% endblock %}

[tool.creosote]
venvs=[".venv"]
paths=["."]
deps-file="pyproject.toml"
sections=["project.dependencies"]

[tool.ruff]
fix = true

[tool.ruff.lint]
ignore = ["COM812"]
select = ["E", "W", "I", "F", "UP", "S", "B", "A", "COM", "LOG", "PTH", "Q"]
